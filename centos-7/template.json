{
"builders": [
{
  "type": "virtualbox-iso",
"boot_command": [
  "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
],
"boot_wait": "10s",
"disk_size": 20000,
"guest_os_type": "RedHat_64",
"headless": true,
"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
"http_directory": "http",
"iso_checksum": "6ffa7ad44e8716e4cd6a5c3a85ba5675a935fc0448c260f43b12311356ba85ad",
"iso_checksum_type": "sha256",
"iso_urls": [
  "CentOS-7-x86_64-NetInstall-1908.iso",
  "http://mirrors.ukfast.co.uk/sites/ftp.centos.org/7.7.1908/isos/x86_64/CentOS-7-x86_64-NetInstall-1908.iso"
],
"ssh_username": "vagrant",
"ssh_password": "vagrant",
"ssh_port": 22,
"ssh_wait_timeout": "10000s",
"shutdown_command": "echo vagrant|sudo -S /sbin/halt -h -p",
"vboxmanage": [
  [ "modifyvm", "{{.Name}}", "--memory", "4048" ],
  [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
]
}],
"provisioners": [
      {
        "type": "shell",
        "execute_command": "echo vagrant|sudo -S sh {{.Path}}",
        "override": {
          "virtualbox-iso": {
            "scripts": [
              "scripts/base.sh",
              "scripts/vagrant.sh",
              "scripts/virtualbox.sh",
              "scripts/provision.sh",
              "scripts/cleanup.sh",
              "scripts/zerodisk.sh"
            ]
          }
        }
      }
      ],
"post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "centos-7-x64-virtualbox.box"
        }
      }
    }
  ]
}

